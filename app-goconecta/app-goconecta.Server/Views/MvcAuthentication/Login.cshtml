@model app_goconecta.Server.DTOs.UserLoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-4 text-center fw-bold">
                        <i class="bi bi-person-circle me-2" aria-hidden="true"></i>Login
                    </h1>
                    <hr />
                    @if(ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div class="fw-bold mb-1">
                                <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>@ViewBag.ErrorTitle
                            </div>
                            <div>@ViewBag.ErrorMessage</div>
                        </div>
                    }
                    <form asp-controller="MvcAuthentication" asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group has-validation">
                                <span class="input-group-text" id="email-addon">
                                    <i class="bi bi-envelope" aria-hidden="true"></i>
                                </span>
                                <input asp-for="Email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : (!ViewData.ModelState.IsValid ? "is-valid" : ""))" type="email" aria-describedby="email-addon" required />
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group has-validation">
                                <span class="input-group-text" id="password-addon">
                                    <i class="bi bi-lock" aria-hidden="true"></i>
                                </span>
                                <input asp-for="Password" class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : (!ViewData.ModelState.IsValid ? "is-valid" : ""))" type="password" aria-describedby="password-addon" required />
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>