@model app_goconecta.Server.Models.Reservation

@{
    ViewData["Title"] = "Nova Reserva";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>
                    <span>Nova Reserva</span>
                </div>
                <div class="card-body">
                    <form asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="ReservationNumber" class="form-label"></label>
                            <input asp-for="ReservationNumber" class="form-control" />
                            <span asp-validation-for="ReservationNumber" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReservationDate" class="form-label"></label>
                            <input asp-for="ReservationDate" class="form-control" type="date" />
                            <span asp-validation-for="ReservationDate" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PackageId" class="form-label"></label>
                            <select asp-for="PackageId" class="form-select" asp-items="ViewBag.PackageId"></select>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2" aria-hidden="true"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
