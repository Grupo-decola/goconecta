@model app_goconecta.Server.Models.Reservation

@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>
                    <span>Detalhes da Reserva</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-hash me-1 text-secondary" aria-hidden="true"></i>Número</dt>
                        <dd class="col-sm-8">@Model.ReservationNumber</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar-event me-1 text-primary" aria-hidden="true"></i>Data</dt>
                        <dd class="col-sm-8">@Model.ReservationDate.ToShortDateString()</dd>
                        <dt class="col-sm-4"><i class="bi bi-info-circle me-1 text-info" aria-hidden="true"></i>Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                        <dt class="col-sm-4"><i class="bi bi-person me-1 text-success" aria-hidden="true"></i>Usuário</dt>
                        <dd class="col-sm-8">@Model.User?.Email</dd>
                        <dt class="col-sm-4"><i class="bi bi-box-seam me-1 text-primary" aria-hidden="true"></i>Pacote</dt>
                        <dd class="col-sm-8">@Model.Package?.Description</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                            <i class="bi bi-pencil me-1" aria-hidden="true"></i>Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1" aria-hidden="true"></i>Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
