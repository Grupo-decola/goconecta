<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GoConecta</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/app-goconecta.Server.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-globe2 fs-3 text-primary"></i>
                <span>GoConecta</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"> <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hotels" ? "active fw-bold" : "")" asp-controller="Hotels" asp-action="Index"><i class="bi bi-building"></i> Hotels</a> </li>
                    <li class="nav-item"> <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Packages" ? "active fw-bold" : "")" asp-controller="Packages" asp-action="Index"><i class="bi bi-box-seam"></i> Packages</a> </li>
                    <li class="nav-item"> <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reservations" ? "active fw-bold" : "")" asp-controller="Reservations" asp-action="Index"><i class="bi bi-calendar-check"></i> Reservations</a> </li>
                    <li class="nav-item"> <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active fw-bold" : "")" asp-controller="Users" asp-action="Index"><i class="bi bi-people"></i> Users</a> </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted bg-light mt-5 py-3">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
        <span>&copy; 2025 - GoConecta</span>
        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted ms-md-3"><i class="bi bi-shield-lock"></i> Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>