@model app_goconecta.Server.Models.User

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-person-circle me-2" aria-hidden="true"></i>
                    <span>Detalhes do Usuário</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-person me-1 text-primary" aria-hidden="true"></i>Nome</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4"><i class="bi bi-envelope me-1 text-secondary" aria-hidden="true"></i>Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4"><i class="bi bi-key me-1 text-warning" aria-hidden="true"></i>Senha</dt>
                        <dd class="col-sm-8">@Model.Password</dd>
                        <dt class="col-sm-4"><i class="bi bi-phone me-1 text-success" aria-hidden="true"></i>Telefone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        <dt class="col-sm-4"><i class="bi bi-credit-card-2-front me-1 text-warning" aria-hidden="true"></i>CPF/Passaporte</dt>
                        <dd class="col-sm-8">@Model.CpfPassport</dd>
                        <dt class="col-sm-4"><i class="bi bi-person-badge me-1 text-info" aria-hidden="true"></i>Papel</dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                            <i class="bi bi-pencil me-1" aria-hidden="true"></i>Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1" aria-hidden="true"></i>Excluir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
