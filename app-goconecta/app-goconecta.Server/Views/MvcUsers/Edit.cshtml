@using app_goconecta.Server.Models
@model app_goconecta.Server.Models.User

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil me-2" aria-hidden="true"></i>
                    <span>Editar Usuário</span>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CpfPassport" class="form-label"></label>
                            <input asp-for="CpfPassport" class="form-control" />
                            <span asp-validation-for="CpfPassport" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" asp-items="@Html.GetEnumSelectList<UserRole>()" class="form-select"></select>
                            <span asp-validation-for="Role" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2" aria-hidden="true"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
