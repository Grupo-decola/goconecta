@model app_goconecta.Server.Models.Hotel

@{
    ViewData["Title"] = "Excluir Hotel";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-trash me-2" aria-hidden="true"></i>
                    <span>Excluir Hotel</span>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-4"><i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>Tem certeza que deseja excluir este hotel?</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-type me-1 text-secondary" aria-hidden="true"></i>Nome</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4"><i class="bi bi-card-text me-1 text-secondary" aria-hidden="true"></i>Descrição</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        <dt class="col-sm-4"><i class="bi bi-star-fill me-1 text-warning" aria-hidden="true"></i>Nota</dt>
                        <dd class="col-sm-8">@Model.Rating</dd>
                        <dt class="col-sm-4"><i class="bi bi-door-open me-1 text-secondary" aria-hidden="true"></i>Quartos Disponíveis</dt>
                        <dd class="col-sm-8">@Model.RoomsAvailable</dd>
                        <dt class="col-sm-4"><i class="bi bi-geo-alt me-1 text-danger" aria-hidden="true"></i>Região</dt>
                        <dd class="col-sm-8">@Model.Region</dd>
                        <dt class="col-sm-4"><i class="bi bi-house-door me-1 text-success" aria-hidden="true"></i>Endereço</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Cancelar
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2" aria-hidden="true"></i>Excluir
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
