@model app_goconecta.Server.ViewModels.HotelEditViewModel

@{
    ViewData["Title"] = "Editar Hotel";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil me-2" aria-hidden="true"></i>
                    <span>Editar Hotel</span>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nome</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Avaliação</label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RoomsAvailable" class="form-label">Quartos Disponíveis</label>
                            <input asp-for="RoomsAvailable" class="form-control" />
                            <span asp-validation-for="RoomsAvailable" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Region" class="form-label">Região</label>
                            <input asp-for="Region" class="form-control" />
                            <span asp-validation-for="Region" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Endereço</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label>Amenidades</label>
                            @foreach (var amenity in Model.Amenities)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" 
                                           name="SelectedAmenityIds" value="@amenity.Id" 
                                           @(amenity.Checked ? "checked" : "") id="amenity_@amenity.Id" />
                                    <label class="form-check-label" for="amenity_@amenity.Id">@amenity.Name</label>
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2" aria-hidden="true"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
