@model app_goconecta.Server.ViewModels.PackageCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Package.Title" class="control-label"></label>
                <input asp-for="Package.Title" class="form-control" />
                <span asp-validation-for="Package.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Description" class="control-label"></label>
                <input asp-for="Package.Description" class="form-control" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Destination" class="control-label"></label>
                <input asp-for="Package.Destination" class="form-control" />
                <span asp-validation-for="Package.Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.HotelId" class="control-label"></label>
                <select asp-for="Package.HotelId" class="form-control">
                    @foreach (var hotel in Model.Hotels) {
                        <option value="@hotel.Id">@hotel.Name</option>
                    }
                </select>
                <span asp-validation-for="Package.HotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.DurationDays" class="control-label"></label>
                <input asp-for="Package.DurationDays" class="form-control" />
                <span asp-validation-for="Package.DurationDays" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="AvailabilityStartDate" class="control-label"></label> *@
            @*     <input asp-for="AvailabilityStartDate" class="form-control" /> *@
