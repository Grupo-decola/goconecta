            @*     <input asp-for="AvailabilityEndDate" class="form-control" /> *@
            @*     <span asp-validation-for="AvailabilityEndDate" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Package.PriceAdults" class="control-label"></label>
                <input asp-for="Package.PriceAdults" class="form-control" />
                <span asp-validation-for="Package.PriceAdults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.PriceChildren" class="control-label"></label>
                <input asp-for="Package.PriceChildren" class="form-control" />
                <span asp-validation-for="Package.PriceChildren" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Media1.File" class="control-label"></label>
                <input asp-for="Media1.File" class="form-control" type="file"/>
                <span asp-validation-for="Media1.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Media2.File" class="control-label"></label>
                <input asp-for="Media2.File" class="form-control" type="file"/>
                <span asp-validation-for="Media2.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Media3.File" class="control-label"></label>
                <input asp-for="Media3.File" class="form-control" type="file"/>
                <span asp-validation-for="Media3.File" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
