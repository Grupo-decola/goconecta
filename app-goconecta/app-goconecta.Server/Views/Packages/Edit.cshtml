@model app_goconecta.Server.Models.Package

@{
    ViewData["Title"] = "Editar Pacote";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil me-2" aria-hidden="true"></i>
                    <span>Editar Pacote</span>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Destination" class="form-label"></label>
                            <input asp-for="Destination" class="form-control" />
                            <span asp-validation-for="Destination" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DurationDays" class="form-label"></label>
                            <input asp-for="DurationDays" class="form-control" />
                            <span asp-validation-for="DurationDays" class="invalid-feedback d-block"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailabilityStartDate" class="form-label"></label>
                                <input asp-for="AvailabilityStartDate" class="form-control" type="date" />
                                <span asp-validation-for="AvailabilityStartDate" class="invalid-feedback d-block"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailabilityEndDate" class="form-label"></label>
                                <input asp-for="AvailabilityEndDate" class="form-control" type="date" />
                                <span asp-validation-for="AvailabilityEndDate" class="invalid-feedback d-block"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceAdults" class="form-label"></label>
                                <input asp-for="PriceAdults" class="form-control" />
                                <span asp-validation-for="PriceAdults" class="invalid-feedback d-block"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceChildren" class="form-label"></label>
                                <input asp-for="PriceChildren" class="form-control" />
                                <span asp-validation-for="PriceChildren" class="invalid-feedback d-block"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2" aria-hidden="true"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
